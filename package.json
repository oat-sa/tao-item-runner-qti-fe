{
    "name": "@oat-sa/tao-item-runner-qti",
    "version": "1.7.1",
    "displayName": "TAO Item Runner QTI",
    "description": "TAO QTI Item Runner modules",
    "files": [
        "dist",
        "src"
    ],
    "directories": {
        "test": "test"
    },
    "scripts": {
        "test": "npx qunit-testrunner",
        "test:keepAlive": "npx qunit-testrunner --keepalive",
        "test:cov": "npm run build:cov && npx qunit-testrunner --cov",
        "coverage": "nyc report",
        "coverage:html": "nyc report --reporter=lcov && open-cli coverage/lcov-report/index.html",
        "coverage:clover": "nyc report --reporter=clover",
        "build": "rollup --config ./build/rollup.config.js",
        "build:watch": "rollup --config ./build/rollup.config.js --watch",
        "build:cov": "rollup --config ./build/rollup.config.js --environment COVERAGE",
        "lint:src": "eslint -c .eslintrc.js src",
        "lint:test": "eslint -c .eslintrc.js test",
        "lint:report": "eslint -c .eslintrc.js --output-file eslint_report.json --format json . | true",
        "prepare": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oat-sa/tao-item-runner-qti-fe.git"
    },
    "keywords": [
        "tao",
        "item",
        "runner",
        "qti",
        "fe",
        "frontend"
    ],
    "publishConfig": {
        "access": "public"
    },
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/oat-sa/tao-item-runner-qti-fe/issues"
    },
    "homepage": "https://github.com/oat-sa/tao-item-runner-qti-fe#readme",
    "devDependencies": {
        "@oat-sa/browserslist-config-tao": "^1.0.1",
        "@oat-sa/eslint-config-tao": "^1.2.0",
        "@oat-sa/expr-eval": "^1.3.1",
        "@oat-sa/prettier-config": "^0.1.1",
        "@oat-sa/rollup-plugin-wildcard-external": "^0.1.0",
        "@oat-sa/tao-core-libs": "https://github.com/oat-sa/tao-core-libs-fe.git#fix/ADF-1166/broken-glob-pattern",
        "@oat-sa/tao-core-sdk": "https://github.com/oat-sa/tao-core-sdk-fe.git#fix/ADF-1166/broken-glob-pattern",
        "@oat-sa/tao-core-shared-libs": "^1.4.1",
        "@oat-sa/tao-core-ui": "https://github.com/oat-sa/tao-core-ui-fe.git#fix/ADF-1166/broken-glob-pattern",
        "@oat-sa/tao-item-runner": "^0.8.1",
        "@oat-sa/tao-qunit-testrunner": "^1.0.3",
        "async": "^0.2.10",
        "decimal.js": "10.1.1",
        "dompurify": "^2.4.0",
        "eslint": "^8.25.0",
        "eslint-plugin-es": "^4.1.0",
        "eslint-plugin-jsdoc": "^39.3.6",
        "fs-extra": "^8.0.1",
        "gamp": "^0.2.1",
        "glob": "^8.0.3",
        "handlebars": "1.3.0",
        "interactjs": "1.3.4",
        "jquery": "1.9.1",
        "lodash": "2.4.1",
        "moment": "^2.29.4",
        "moment-timezone": "^0.5.37",
        "nyc": "^15.0.1",
        "open-cli": "^7.1.0",
        "popper.js": "^1.15.0",
        "postcss-scss": "^2.0.0",
        "prettier": "^2.7.1",
        "promise-limit": "^2.7.0",
        "qunit": "^2.19.1",
        "qunit-assert-close": "^2.1.2",
        "raphael": "2.3.0",
        "require-css": "^0.1.10",
        "requirejs-plugins": "^1.0.2",
        "rollup": "^1.32.1",
        "rollup-plugin-alias": "^1.5.2",
        "rollup-plugin-handlebars-plus": "^0.2.4",
        "rollup-plugin-istanbul": "^2.0.1",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "select2": "^3.5.1",
        "tooltip.js": "^1.3.2"
    },
    "browserslist": [
        "extends @oat-sa/browserslist-config-tao"
    ],
    "prettier": "@oat-sa/prettier-config"
}
